<% include ../partials/header%>
<%- include ../partials/sidebar%>
<div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              <form action='/khoa/update/<%= infoKhoa._id %>' method='POST'>
                <h4 class="form-header text-uppercase">
                  <i class="fa fa-user-circle-o"></i>
                   THÊM KHOA
                </h4>
                <div class="form-group row">
                  <label for="input-2" class="col-sm-2 col-form-label">Thêm Khoa</label>
                  <div class="col-sm-10">
                    <input type="text" name='tenKhoa' value='<%= infoKhoa.tenKhoa %>' class="form-control" required>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="input-2" class="col-sm-2 col-form-label">Mã Khoa</label>
                  <div class="col-sm-10">
                    <input type="text" name='maKhoa' value='<%= infoKhoa.maKhoa %>' class="form-control" required>
                  </div>
                </div>
                <div class="form-footer">
                    <button  class="btn btn-success"  type='submit'>
                      <i class="fa fa-check-square-o" ></i> 
                      Lưu vào CSDL
                    </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div><!--End Row-->
<%- include ../partials/footer%>