<% include ../partials/header%>
<%- include ../partials/sidebar%>
<div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              <form action='/sinhvien/update/<%= infoStudent._id %>' method='POST'>
                <h4 class="form-header text-uppercase">
                  <i class="fa fa-user-circle-o"></i>
                   Thông Tin Sinh Viên
                </h4>
                <div class="form-group row">
                  <label for="input-2" class="col-sm-2 col-form-label">Họ Tên</label>
                  <div class="col-sm-10">
                    <input type="text" name='hoTen' value='<%= infoStudent.tenSV %>' id="txtHoTen" class="form-control" required>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="input-3" class="col-sm-2 col-form-label">MSSV</label>
                  <div class="col-sm-10">
                    <input type="text" id="txtMSSV" value='<%= infoStudent.mssv %>'name='mssv' class="form-control"  required>
                  </div>
                </div>
                <h4 class="form-header">
                <i class="fa fa-file-text-o"></i>
                  YÊU CẦU
                </h4>
                <div class="form-group row">
                  <label for="input-5" class="col-sm-2 col-form-label">Giới tính</label>
                  <div class="col-sm-10">
                    <select class="form-control" required>
                        <option>Nam</option>
                        <option>Nữ</option>
                    </select>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="input-6" class="col-sm-2 col-form-label">Chọn Khoa</label>
                  <div class="col-sm-10">
                    <select class="form-control" name='maKhoa' id="txtKhoa" required>
                    <% if (listFaculty && listFaculty.length > 0) { %>
                     <% listFaculty.forEach(element => { %>
                        <option><%=element.tenKhoa%></option>
                     <% }) %>
                    <% } %>
                    </select>
                  </div>
                </div>
                <div class="form-footer">
                    <button  class="btn btn-success" id="btnSua" type='submit'>
                      <i class="fa fa-check-square-o" ></i> 
                      Lưu lại
                    </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div><!--End Row-->
<% include ../partials/footer %> 
